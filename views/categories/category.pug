extends ../layout

block content

    h2(class="categoriesHeader")=title
    div(class="categories")
        each recipe in recipes
            div
                recipe(class="category-recipe")
                    h3= recipe.name
                    if(recipe.photo) 
                       img(src=`${recipe.photo}`)
                    a(href=`/recipes/${recipe.id}`) See details
    br
    a(href="../categories") Back to categories
            